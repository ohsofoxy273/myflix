%section.sign_in.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for(:session, url: sessions_path, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-5") do |f|
        %header
          %h1 Sign in
          = f.email_field :email, label: "Email Address"
          = f.password_field :password, label: "Password"
          = f.submit "Sign in"
